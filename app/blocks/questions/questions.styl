.questions
    position relative
    background-color $c-blue
    height 100vh

    &__wrap
        position relative
        padding 3%
        margin 0 auto
        z-index 1
        +below(1200px)
            width 100%
        +below(720px)
            padding-top 10%

    &__bg
        position absolute
        top w(50px)
        left 20%
        width 55vw
        img
            width 100%

        +below(1200px)
            width 90vw
            left 5%
            top wm(50px)
        +below(720px)
            left 0
            width 100vw
            top wm(280px)

    &__title,
    &__variants
        position relative

    &__title-number
        color $c-yellow
        text-align center
        font-family Bebas Neue
        font-size w(40)
        font-weight 700
        text-transform uppercase
        +below(1200px)
            font-size wm(44)
        +below(720px)
            font-size wm(65)

    &__title-text
        color $c-white
        text-align center
        font-family $ff-FuturaPT
        font-size w(15)
        font-weight 700
        line-height 1.5
        text-transform uppercase
        padding w(8) w(170) 0 w(170)
        +below(1200px)
            font-size wm(20)
            padding wm(8) wm(90) 0 wm(90)
        +below(720px)
            font-size wm(28)
            padding wm(20) 0 0 0

    &__answer
        display flex
        align-items flex-end
        cursor pointer
        padding-top w(8)
        +below(720px)
            padding-top wm(10)
        &:first-child

            +below(1200px)
                padding-top wm(77)
            +below(720px)
                padding-top 15%

        span
            color $c-yellow
            font-family Bebas Neue
            font-size w(40)
            font-weight 700
            text-transform uppercase
            +below(1200px)
                font-size wm(44)
            +below(720px)
                font-size wm(64)

    &__answer-text
        color $c-white
        font-family Futura PT
        font-size w(20)
        font-weight 700
        line-height normal
        text-transform uppercase
        padding-left w(10)
        +below(1200px)
            font-size wm(24)
        +below(720px)
            font-size wm(30)


    