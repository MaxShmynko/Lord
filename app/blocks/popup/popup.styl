.popup
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    background-color $c-blue
    background-size cover
    display none
    z-index 5

    &.is-active
        display block

    &__content
        display flex
        flex-direction column
        justify-content space-between
        height 100vh
        align-items center
        position relative
        padding 5%
        margin 0 auto
        z-index 1

    &__chapter
        color $c-yellow
        text-align center
        font-family $ff-BebasNeue
        font-weight 700
        text-transform uppercase
        +below(1200px)
            font-size wm(26)
        +below(720px)
            font-size wm(50)

    &__text
        font-family $ff-FuturaPT
        color $c-white
        font-size w(20)
        font-weight 700
        line-height normal
        text-transform uppercase
        text-align center
        +below(1200px)
            font-size wm(20)
        +below(720px)
            font-size wm(27)

    &__button
        color $c-yellow
        text-align center
        font-family $ff-BebasNeue
        font-size w(16)
        font-weight 700
        text-decoration none
        display block
        background-color transparent
        border none
        +below(1200px)
            font-size wm(16)
        +below(720px)
            font-size wm(30)

    &__bg
        position absolute
        left 15%
        width 60vw
        top 0
        img
            width 100%

        +below(1400px)
            width 80vw
            left 10%
        +below(720px)
            left 0
            width 100vw
            top 25%