.test
    position relative
    background-color $c-blue
    height 100vh

    &[data-id="1"]
        .test__text_2
            right w(790)

    &[data-id="3"]
        .test__text_2
            right w(720)

    &[data-id="5"]
        .test__text_1
            left w(720)

    &__title
        text-align center
        font-family $ff-FuturaPT
        font-size w(15)
        font-weight 700
        line-height 1.5
        text-transform uppercase
        padding w(8) w(170) 0 w(170)
        color $c-white
        +below(1200px)
            font-size wm(20)
            padding wm(8) wm(90) 0 wm(90)
        +below(720px)
            font-size wm(28)
            padding wm(20) 0 0 0

    &__counter
        color $c-yellow
        text-align center
        font-family $ff-BebasNeue
        font-size w(40)
        font-weight 700
        text-transform uppercase
        +below(1200px)
            font-size wm(44)
        +below(720px)
            font-size wm(65)

    &__list
        position relative
        height 100%
        display flex
        flex-flow column
        justify-content flex-start
    
    &__item
        cursor pointer
    
    &__sign
        position relative
        display flex
        flex-direction row
        justify-content flex-start
        align-items flex-end

        span
            color $c-yellow
            font-family $ff-BebasNeue
            font-size w(40)
            font-weight 700
            text-transform uppercase
            +below(1200px)
                font-size wm(44)
            +below(720px)
                font-size wm(64)

    &__wrap
        position relative
        display flex
        flex-flow column
        padding 3%
        margin 0 auto
        z-index 1
        +below(1200px)
            width 100%
        +below(720px)
            padding-top 10%
    &__text
        transition transform .3s
       
    &__text
        font-family $ff-FuturaPT
        color $c-white
        font-size w(20)
        font-weight 700
        line-height normal
        text-transform uppercase
        padding-left w(10)
        +below(1200px)
            font-size wm(24)
        +below(720px)
            font-size wm(30)

    &__bg
        position absolute
        top w(50px)
        left 20%
        width 55vw
        img
            width 100%

        +below(1200px)
            width 90vw
            left 5%
            top wm(50px)
        +below(720px)
            left 0
            width 100vw
            top wm(280px)
